---
import MainLayout from '../layouts/Layout.astro';
import LinkedIn from '../icons/LinkedIn.astro';
import SocialPill from '../icons/SocialPill.astro';
import SocialPillMail from '../icons/SocialPillMail.astro';
import GitHub from '../icons/GitHub.astro';
import IconMail from '../icons/IconMail.astro';
import SectionContainer from '../icons/SectionContainer.astro';
import CodeIcon from "../icons/CodeIcon.astro";
import Experience from '../components/Experience.astro';
import BriefCaseIcon from '../icons/BriefCaseIcon.astro';
import Proyects from '../components/Proyects.astro';
import Footer from '../components/Footer.astro';
---

<MainLayout title="PortFolio de Georgi Borisov Aleksandrov - Desarrollador y Programador"
  description="Si buscas un desarrollador junior con ganas de aprender y aportar, estar茅 encantado de colaborar en tu proyecto.">

  <main class="px-4 sm:px-6">
