      <div class="flex flex-col items-center md:flex-row md:items-start gap-6">
        <!-- Foto de perfil -->
        <div class="flex flex-col items-center md:items-start">
          <img class="rounded-full w-28 h-28 sm:w-32 sm:h-32 object-cover border-2 border-yellow-400" 
               src="../../public/logo.jpg" 
               alt="Georgi photo" />
          
          <!-- Redes sociales solo en m贸vil -->
          <div class="md:hidden mt-4">
            <ul class="flex flex-wrap justify-center gap-3">
              <li>
                <SocialPill href="https://linkedin.com/in/georgi-borisov-dev" class="!px-3 !py-1">
                  <LinkedIn class="w-5 h-5" />
                </SocialPill>
              </li>
              <li>
                <SocialPill href="https://github.com/GeorgiF0x" class="!px-3 !py-1">
                  <GitHub class="w-5 h-5" />
                </SocialPill>
              </li>
              <li>
