---
interface Props {
    title:string,
    date:string,
    description:string
}

const { title, date, description } = Astro.props;
---

<li class="relative mb-6 sm:mb-0 -ml-4">
    <div class="flex items-center ">
      <!-- Punto de la línea -->
      <div class="z-10 mt-2  flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full ring-0 ring-white dark:bg-blue-900 sm:ring-8 dark:ring-gray-900 shrink-0">
        <svg class="w-2.5 h-2.5 text-blue-800 dark:text-blue-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
          <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
        </svg>
      </div>
  
      <!-- Línea divisoria -->
      <div class="hidden sm:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700"></div>
    </div>
  
    <div class="mt-3 sm:pe-8">
     <!-- Título de la experiencia -->
<h3 class="text-lg font-semibold text-yellow-400 opacity-80 dark:text-yellow-300 dark:opacity-80">{title}</h3>

<!-- Fecha -->
<time class="block mb-2 text-sm font-normal leading-none text-blue-500 opacity-80 dark:text-blue-400 dark:opacity-80">{date}</time>

<!-- Descripción -->
<p class="text-sm font-normal text-white dark:text-gray-200 italic">{description}</p>


    </div>
  </li>
  
  
