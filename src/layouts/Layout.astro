---
import "@fontsource-variable/onest"
import Header from '../components/Header.astro'; // Importar el componente Header
import '../styles/global.css'; // Si tienes algún archivo de estilos globales
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>PortFolio Georgi Borisov</title>
  </head>
  <body class="bg-gray-900 text-white flex items-center mt-5 h-screen flex-col">
	<div class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"></div>
    <Header />

    <!-- Aquí se renderiza el contenido de las páginas que usen este layout -->
    <slot />
  </body>
</html>

<style>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family: "Onest Variable", system-ui, sans-serif;
  }

  body {
    background: #05050505;
    display: flex;
	flex-direction: column;
  
	height: 100vh;
  }
</style>
